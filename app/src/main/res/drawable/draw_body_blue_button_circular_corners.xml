<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/dark_grey" />
            <stroke android:width="1dp" android:color="@color/dark_grey" />
            <corners android:radius="10dp" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/blue" android:startColor="@color/blue" />
            <stroke android:width="0dp" android:color="@color/blue" />
            <corners android:radius="@dimen/thirty" />
        </shape>
    </item>
</selector>